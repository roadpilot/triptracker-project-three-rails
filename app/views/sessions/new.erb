<% if flash[:error] %>
<h3 style="color:red;"><%= flash[:error] %></h3>
<% end %>
<% flash[:error]="" %>
<h1>Log in to TripTracker.</h1>
<%= form_tag('/login', method: :post) do %>

  <div class="form-group">
    <%= label_tag(:handle, "Your name:") %>
    <%= text_field_tag "user[handle]" %>
  </div>

  <div class="form-group">
    <%= label_tag(:password, "Your password:") %>
    <%= password_field_tag("user[password]", nil) %>
  </div>

  <div class="actions">
    <%= submit_tag("Log In") %> or <a href="/users/new">Sign up</a>
  </div>

<% end %> 