<% if flash[:error] %>
<h2 style="color:red;"><%= flash[:error] %></h2>
<% end %>
<h1>Sign up as a new user.</h1>
<%= form_for(@user) do |f| %>
  <label>Handle or Nickname:</label>
  <%= f.text_field :handle %><br>
  <label>Email:</label>
  <%= f.text_field :email %><br>
  <label>Password:</label>
  <%= f.text_field :password %><br>
  <%= f.submit %>
<% end %> 
